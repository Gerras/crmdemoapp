@model dynamic

@{
    Layout = "~/Views/Shared/_Login.cshtml";
}
@section scripts{
    <script src="~/Content/neon/js/neon-forgotpassword.js" type="text/javascript"></script>
}
<div class="login-header login-caret">
    <div class="login-content">
        <a href="@Url.Action("Login", "Account")" class="logo">
            <img src="/Content/images/demo_app_original.png" width="300" alt="" />
        </a>
        <!--<p class="description">Dear user, log in to access the application!</p>-->
        <!-- progress bar indicator -->
        @*<div class="login-progressbar-indicator">
            <h3>43%</h3>
            <span>logging in...</span>
        </div>*@
    </div>
</div>
<div class="login-progressbar">
    <div></div>
</div>
<div class="login-form">
    <div class="login-content">
        <div id="form_title">Registration Complete! Return to Login Page</div>
        <br/>
        @*<div class="form-login-error">
                <h3>Invalid login</h3>
                <p>Enter <strong>demo</strong>/<strong>demo</strong> as login and password.</p>
            </div>*@
        @*<h2 style="color: white;">Demo Portal</h2>*@

        <form id="form_forgot_password">


            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="entypo-user"></i>
                    </div>
                    <input type="text" class="form-control" name="username" id="username" placeholder="Username (Email Address)" autocomplete="off" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="entypo-user"></i>
                    </div>
                    <input type="text" class="form-control" name="firstname" id="firstname" placeholder="First Name" autocomplete="off" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="entypo-user"></i>
                    </div>
                    <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Last Name" autocomplete="off" />
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="entypo-key"></i>
                    </div>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" autocomplete="off" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="entypo-key"></i>
                    </div>
                    <input type="password" class="form-control" name="password2" id="password2" placeholder="Renter Password" autocomplete="off" />
                </div>
            </div>
            <div class="form-group">
                <button type="submit" id="registrationBtn" class="btn btn-primary btn-block btn-login">
                    <i class="entypo-login"></i>
                    Complete Registration
                </button>
            </div>
        </form>
        <div class="login-bottom-links">
            <a href="@Url.Action("Login", "Account")" id="bottomLink" class="link">
                Return to Login Page
            </a>

            <br/>
            <a href="#">Demo Portal</a> - <a href="#">Privacy Policy</a>
        </div>
    </div>
</div>