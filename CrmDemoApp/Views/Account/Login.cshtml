@model dynamic

@{
    Layout = "~/Views/Shared/_Login.cshtml";
}
<div class="login-header login-caret">
    <div class="login-content">
        <a href="@Url.Action("Login", "Account")" class="logo">
            <img src="/Content/images/demo_app_original.png" width="300" alt="" />
        </a>
        <!--<p class="description">Dear user, log in to access the application!</p>-->
        <!-- progress bar indicator -->
        <div class="login-progressbar-indicator">
            <h3>43%</h3>
            <span>logging in...</span>
        </div>
    </div>
</div>
<div class="login-progressbar">
    <div></div>
</div>
<div class="login-form">
    <div class="login-content">
        @*<div class="form-login-error">
            <h3>Invalid login</h3>
            <p>Enter <strong>demo</strong>/<strong>demo</strong> as login and password.</p>
        </div>*@
        @*<h2 style="color: white;">Demo Portal</h2>*@
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form" }))
{
    @*@Html.AntiForgeryToken()*@
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="entypo-user"></i>
                </div>
                <input type="text" class="form-control" name="username" id="username" placeholder="Username" autocomplete="off"/>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="entypo-key"></i>
                </div>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password" autocomplete="off"/>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" id="loginbtn" class="btn btn-primary btn-block btn-login">
                <i class="entypo-login"></i>
                Login
            </button>
        </div>
}
        <div class="login-bottom-links">
            @Html.ActionLink("Register Account", "Register", "Account", new {@class = "link"})
            <br/>
            <a href="#" class="link">Forgot your password?</a>
            <br/>
            <a href="#">Demo Portal</a> - <a href="#">Privacy Policy</a>
        </div>
    </div>
</div>